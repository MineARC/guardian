.row
  .col-xs-12
    .panel.panel-default
      .panel-heading
        | AURA-FX EXTERNAL GAS
      .panel-body
        .row.text-center
          each gas, key in aura_ext
            if(gas.isRecent && key != 'Temp' && key != 'Temp_F')
              .col-sm-4
                .item
                  .pos-rlt
                    .item-overlay.bg-black-opacity.r.r-2x.r.r-2x(style='z-index: 10;')
                      .center.text-center.m-t-n.w-full
                        a(data-toggle="modal" data-target="#aura_ext_" + key + "_modal")
                          i.fa.fa-3x.fa-line-chart.text-white
                    .inline(id='readout-' + key + '-aura-ext')
                      div
                        =key
                      .easyPieChart#chart1(ui-jq='easyPieChart', ui-options="{\
                      animate: 1000,\
                      percent: 0,\
                      lineWidth: 5,\
                      trackColor: '#b7b7b7',\
                      barColor: '#7266ba',\
                      scaleColor: '#ffffff',\
                      size: 115,\
                      lineCap: 'butt'\
                      }", style='width: 115px; height: 115px; line-height: 115px;')
                        div
                          span.h2.value
                            = gas.value
                            span(style='font-size: 0.5em')= aura_params[key].unit
                          .text.text-sm.delta
                            i.fa.fa-fw.fa-circle.text-muted.text-sm
                            | 0