- var n = 1;
while n < (isNaN(battmon_strings) ? 9 : parseInt(battmon_strings) + 1)
  .row(class='string-#{n};')
    .col-xs-12
      .panel.panel-default
        .panel-heading 
          = 'Battery Bank ' + n
        .panel-body
          .row.text-center
            .col-sm-3.item.pos-rlt(style='padding-top: 10px;')
              .batt.battery-1
                .batt-left
                  span.h2.batt2.voltage= battmon.Bank[n][0].Voltage
                  span.text.text-sm V
                hr
                .batt-right
                  span.h2.batt2.temperature= battmon.Bank[n][0].Temperature
                  span.text.text-sm ℃
            .col-sm-3.item.pos-rlt(style='padding-top: 10px;')
              .batt.battery-2
                .batt-left
                  span.h2.batt2.voltage= battmon.Bank[n][1].Voltage
                  span.text.text-sm V
                hr
                .batt-right
                  span.h2.batt2.temperature= battmon.Bank[n][1].Temperature
                  span.text.text-sm ℃
            .col-sm-3.item.pos-rlt(style='padding-top: 10px;')
              .batt.battery-3
                .batt-left
                  span.h2.batt2.voltage= battmon.Bank[n][2].Voltage
                  span.text.text-sm V
                hr
                .batt-right
                  span.h2.batt2.temperature= battmon.Bank[n][2].Temperature
                  span.text.text-sm ℃
            .col-sm-3.item.pos-rlt(style='padding-top: 10px;')
              .batt.battery-4
                .batt-left
                  span.h2.batt2.voltage= battmon.Bank[n][3].Voltage
                  span.text.text-sm V
                hr
                .batt-right
                  span.h2.batt2.temperature= battmon.Bank[n][3].Temperature
                  span.text.text-sm ℃
  - n++;
