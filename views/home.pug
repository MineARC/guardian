extends layout

block vars
  span.right
    span#name
      p.inline Name: 
        b.r-green #{name}
    span#mode
      p.inline  Mode: 
        b.r-green #{mode}
           
block append content
  div(class='jumbotron')
    div(class='container-fluid')
      if(system_information)
        div.col-xs-12#alarms
          if(alarms_total > 0)
            each alarm in alarms_active
              p.alert.alert-danger= alarm

      include home/camera_internal.pug
        
      if(extn)
        include home/camera_external.pug

      if(elv)
        include home/elv.pug

      if(elvp)
        include home/elvp.pug

      if(series3)
        include home/series3.pug

      if(series4)
        include home/series4.pug

      if(cams)
        include home/cams.pug
        
      if(aura)
        include home/aura.pug
                              
block prepend styles
  script(src='/javascripts/canvasjs.min.js')
            
block prepend scripts
  script(src='/javascripts/home.js')