extends layout

block append navbar
  div
    nav(class='navbar navbar-inverse navbar-fixed-top')
      div(class='container')
        div(class='navbar-header')
          button(type='button' class='navbar-toggle collapsed' data-toggle='collapse' data-target='#navbar')
            span(class='sr-only') Toggle navigaton
            span(class='icon-bar')
            span(class='icon-bar')
            span(class='icon-bar')
          a(class='navbar-brand' href='#') Guardian
        div(id='navbar' class='navbar-collapse collapse')
          form(class='navbar-form navbar-right')
            div(class='form-group')
              input(type='text' placeholder="Email" class='form-control')
            div(class='form-group')
              input(type='password' placeholder="Password" class='form-control')
            button(type='submit' class='btn btn-success') Sign in
        
    
    
block prepend monitor
  div(class='jumbotron')
    div(class='container')
      h1 Monitor
      table(id='table' data-url='/api/monitor/system.json' data-id-field='row_name' data-show-columns="true" data-show-refresh="true")
      thead
        tr
          th(data-field='row_name') Name
          th(data-field='row_info') Info
      
