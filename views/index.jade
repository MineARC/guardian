extends layout

block append navbar
  div
    nav(class='navbar navbar-inverse navbar-fixed-top')
      div(class='container')
        div(class='navbar-header')
          button(type='button' class='navbar-toggle collapsed' data-toggle='collapse' data-target='#navbar')
            span(class='sr-only') Toggle navigaton
            span(class='icon-bar')
            span(class='icon-bar')
            span(class='icon-bar')
          a(class='navbar-brand' href='#') Guardian
        div(id='navbar' class='navbar-collapse collapse')
          form(class='navbar-form navbar-right')
            div(class='form-group')
              input(type='text' placeholder="Email" class='form-control')
            div(class='form-group')
              input(type='password' placeholder="Password" class='form-control')
            button(type='submit' class='btn btn-success') Sign in
        
    
    
block prepend monitor
  div(class='jumbotron')
    div(class='container')
      div(class='col-xs-12 col-sm-12 col-md-12 col-lg-12')
        h1 Monitor
        table(id='system_table')
            tr
              th Name
              th Value
      div(class='col-xs-12 col-sm-6 col-md-6 col-lg-4')
        h1 Fan Board 1
        table(id='fanboard1_table')
          tr
            th Name
            th Value
      div(class='col-xs-12 col-sm-6 col-md-6 col-lg-4')
        h1 Fan Board 2
        table(id='fanboard2_table')
            tr
              th Name
              th Value
      div(class='col-xs-12 col-sm-12 col-md-12 col-lg-4')
        h1 Current Loops
        table(id='currentloops_table')
            tr
              th Name
              th Value